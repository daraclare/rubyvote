<section class="container" id="main">
	<div class="row">
		<div class="col-md-12">

			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

			<p>
			  <strong>Title:</strong>
			  <%= @question.title %>
			</p>

			<p>
			  <strong>Kind:</strong>
			  <%= @question.kind %>
			</p>

			<p>
			  <strong>Poll:</strong>
			  <%= @question.poll %>
			</p>

			<%= link_to 'Edit', edit_question_path(@question) %> |
			<%= link_to 'Back', questions_path %>


		</div>

	</div>
	
</section>