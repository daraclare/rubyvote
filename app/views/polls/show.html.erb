<section class="container">
    <div class="row">
		<div class="col-md-12">
			<p id="notice"><%= notice %></p>
			<h1><%= @poll.title %></h1>
			<h2>Questions</h2>
				<ul>
					<% @poll.questions.each do |question| %>
					<li><%= question.title %></li>
						<ul>
							<% question.possible_answers.each do |possible_answer| %>
							<li><%= possible_answer.title %></li>
							<% end %>
						</ul>
					<% end %>
				</ul>

			<h2>Replies</h2>
				<% @poll.replies.each do |reply| %>
				<div class="col-md-6">
					<div class=".panel.panel-default">
						<div class="panel-heading.text-right">
						<%= time_ago_in_words reply.created_at %>
							<div class=".panel-body">
								<dl>
								<% reply.answers.each do |answer| %>
								  <dt><%= answer.question.title %></dt>
								  <dd><%= answer.value.present? ? answer.value : answer.possible_answer.title %></dd>
								  <% end %>
								   <% end %>
								</dl>

								
							</div>
							


						</div>
					</div>
				</div>



			<div class="btn-group"> 
			<%= link_to 'Add question', new_poll_question_path(@poll) %> | 
			<%= link_to 'Edit', edit_poll_path(@poll) %> |
			<%= link_to 'Back', polls_path %>
			</div>





		</div>
    </div>
</section>
        
